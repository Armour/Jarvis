{
  "extends": [
    "tslint:recommended"
  ],
  "rules": {
    "arrow-parens": true,
    "max-line-length": false,
    "no-any": false,
    "no-console": [
      true,
      {
        "allow": [
          "warn",
          "error"
        ]
      }
    ],
    "no-non-null-assertion": false,
    "no-require-imports": false,
    "no-import-side-effect": false,
    "no-submodule-imports": false,
    "newline-before-return": false,
    "object-literal-sort-keys": false,
    "quotemark": [
      true,
      "single",
      "avoid-escape",
      "avoid-template"
    ],
    "trailing-comma": [
      true,
      {
        "multiline": "always",
        "singleline": "never"
      }
    ],
    "variable-name": false
  }
}
